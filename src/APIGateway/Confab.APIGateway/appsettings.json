{
  "reverseProxy": {
    "routes": [
      {
        "routeId": "modular-monolith",
        "clusterId": "modular-monolith",
        "match": {
          "Path": "{**catchall}"
        },
        "transforms": [
          {
            "pathPattern": "{**catchall}"
          }
        ]
      },
      {
        "routeId": "tickets-service",
        "clusterId": "tickets-service",
        "match": {
          "path": "tickets-module/{**catchall}"
        },
        "transforms": [
          {
            "pathPattern": "{**catchall}"
          }
        ]
      }
    ],
    "clusters": {
      "modular-monolith": {
        "destinations": {
          "destination1": {
            "address": "http://localhost:5222"
          }
        }
      },
      "tickets-service": {
        "destinations": {
          "destination1": {
            "address": "http://localhost:5254"
          }
        }
      }
    }
  }
}
